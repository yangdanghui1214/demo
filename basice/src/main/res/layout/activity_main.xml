<?xml version="1.0" encoding="utf-8"?>
<com.tsign.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tsign.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--下载Apk进度条-->
        <com.tsign.ts.download.view.UpdateSoftwareView
            android:id="@+id/download_apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_heightPercent="6%h" />

    </com.tsign.percent.PercentLinearLayout>

</com.tsign.percent.PercentRelativeLayout>